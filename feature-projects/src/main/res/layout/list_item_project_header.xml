<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.kevalpatel2106.projects.list.adapter.ProjectListItem.HeaderItem" />
    </data>

    <TextView
        android:id="@+id/accountNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorOnSecondary"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingHorizontal="@dimen/spacing_regular"
        android:paddingVertical="@dimen/spacing_small"
        android:text="@{item.title}"
        android:textAppearance="@style/SmallText.Secondary"
        tools:text="@tools:sample/lorem/random" />
</layout>