<resources>

    <style name="Theme.PocketCI.Base" parent="Theme.Material3.DayNight.NoActionBar" />

    <style name="Theme.PocketCI" parent="Theme.PocketCI.Base">
        <!--Colors-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryDark</item>
        <item name="android:colorBackground">@color/primaryBackground</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>
        <item name="android:windowBackground">@color/primaryBackground</item>
        <item name="colorSurface">@color/secondaryBackground</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="colorError">@color/colorError</item>
        <item name="colorOnError">@color/colorOnError</item>
        <item name="rippleColor">@color/rippleColor</item>
        <item name="android:textColorLink">@color/linkColor</item>

        <!--Status bar and navigation-->
        <item name="android:statusBarColor">@color/primaryBackground</item>
        <item name="android:navigationBarColor">@color/primaryBackground</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowContentTransitions">true</item>

        <!--Divider-->
        <item name="android:dividerHeight">@dimen/divider_height</item>
        <item name="android:listDivider">@drawable/list_divider_horizontal</item>
        <item name="dividerHorizontal">@drawable/list_divider_horizontal</item>
        <item name="dividerVertical">@drawable/list_divider_vertical</item>

        <!--Toolbar-->
        <item name="toolbarStyle">@style/Theme.PocketCI.Toolbar</item>
        <item name="toolbarNavigationButtonStyle">@style/Theme.PocketCI.Toolbar.Button.Navigation
        </item>

        <!--Dialogs-->
        <item name="alertDialogTheme">@style/Theme.PocketCI.AlertDialog</item>
        <item name="materialAlertDialogTheme">@style/Theme.PocketCI.AlertDialog</item>

        <!--Text Inputs-->
        <item name="textInputStyle">@style/Theme.PocketCI.TextInputLayout</item>
        <item name="android:textCursorDrawable">@drawable/edit_text_cursor</item>

        <!--Button-->
        <item name="materialButtonStyle">@style/Theme.PocketCI.Button.Primary</item>
        <item name="buttonStyle">@style/Theme.PocketCI.Button.Primary</item>
        <item name="android:buttonStyle">@style/Theme.PocketCI.Button.Primary</item>
        <item name="snackbarButtonStyle">@style/Theme.PocketCI.Button.Snackbar</item>
    </style>
</resources>