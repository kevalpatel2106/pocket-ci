<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Toolbar-->
    <style name="Theme.PocketCI.Toolbar" parent="Widget.Material3.Toolbar.Surface">
        <item name="navigationIcon">@drawable/ic_arrow_back</item>
        <item name="navigationContentDescription">@string/back</item>
        <item name="android:background">@color/secondaryBackground</item>
        <item name="titleTextColor">@color/primaryText</item>
        <item name="android:theme">@style/ThemeOverlay.Toolbar</item>
    </style>

    <style name="ThemeOverlay.Toolbar" parent="">
        <item name="colorControlNormal">@color/primaryText</item>
        <item name="actionMenuTextColor">@color/primaryText</item>
    </style>

    <style name="Theme.PocketCI.Toolbar.Button.Navigation" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">@color/primaryText</item>
    </style>

    <style name="Theme.PocketCI.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="errorIconDrawable">@drawable/ic_cancel_rounded</item>
        <item name="errorIconTint">@color/colorError</item>
        <item name="errorTextAppearance">@style/NanoText.Red</item>
        <item name="hintTextAppearance">@style/NanoText.Primary</item>
        <item name="strokeColor">@color/gray7</item>
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="boxStrokeErrorColor">@color/colorError</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="counterOverflowTextColor">@color/colorError</item>
    </style>

    <!--Snackbar-->
    <style name="Theme.PocketCI.Button.Snackbar" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!--Alert Dialog-->
    <style name="Theme.PocketCI.AlertDialog" parent="Theme.Material3.DayNight.Dialog.Alert">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="dialogCornerRadius">@dimen/spacing_small</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_bottom</item>
    </style>
</resources>