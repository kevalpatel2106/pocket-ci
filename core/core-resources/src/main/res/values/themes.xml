<resources>

    <style name="Theme.PocketCI.Base" parent="Theme.Material3.DayNight.NoActionBar" />

    <style name="Theme.PocketCI" parent="Theme.PocketCI.Base">
        <!--Other colors-->
        <item name="android:textColorLink">@color/linkColor</item>

        <!--Status bar and navigation-->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">?colorSurface</item>
        <item name="android:navigationBarColor">?colorSurface</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowContentTransitions">true</item>

        <!--Divider-->
        <item name="android:dividerHeight">@dimen/divider_height</item>
        <item name="android:listDivider">@drawable/list_divider_horizontal</item>
        <item name="dividerHorizontal">@drawable/list_divider_horizontal</item>
        <item name="dividerVertical">@drawable/list_divider_vertical</item>>

        <!--Components-->
        <item name="cardViewStyle">@style/Widget.Material3.CardView.Filled</item>
        <item name="materialCardViewStyle">@style/Widget.Material3.CardView.Filled</item>
        <item name="chipStyle">@style/Theme.PocketCI.Chip.Action</item>
        <item name="chipGroupStyle">@style/Theme.PocketCI.ChipGroup</item>
    </style>

    <style name="Theme.PocketCI.Chip.Action" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">@color/brown</item>
        <item name="chipIconTint">@color/white</item>
        <item name="chipSurfaceColor">@color/tan</item>
        <item name="marginHorizontal">@dimen/spacing_micro</item>
        <item name="checkedIconVisible">false</item>
    </style>

    <style name="Theme.PocketCI.ChipGroup" parent="Widget.MaterialComponents.ChipGroup">
        <item name="chipSpacingVertical">@dimen/spacing_micro</item>
        <item name="chipSpacingHorizontal">@dimen/spacing_small</item>
    </style>
</resources>